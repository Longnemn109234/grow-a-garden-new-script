local HttpService = game:GetService("HttpService")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- Use PlayerGui for Delta X compatibility
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "RareScannerUI"
ScreenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")

local Frame = Instance.new("Frame")
Frame.Size = UDim2.new(0, 270, 0, 120)
Frame.Position = UDim2.new(0, 10, 0, 10)
Frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Frame.Parent = ScreenGui

local Label = Instance.new("TextLabel")
Label.Size = UDim2.new(1, 0, 1, 0)
Label.TextColor3 = Color3.new(1, 1, 1)
Label.Font = Enum.Font.GothamBold
Label.TextSize = 16
Label.TextWrapped = true
Label.Text = "üîç Scanning..."
Label.BackgroundTransparency = 1
Label.Parent = Frame

-- === Rare pets list ===
local RARE_PETS = {
    ["Disco Bee"] = true,
    ["Butterfly"] = true,
    ["Dragonfly"] = true,
    ["Racoon"] = true,
    ["Red Fox"] = true,
    ["Penguin"] = true,
    ["Phoenix"] = true,
    ["Golden Ant"] = true
}

-- === Scanner function ===
local function scanWorld()
    local found = nil

    for _, obj in ipairs(workspace:GetDescendants()) do
        if obj:IsA("Model") then
            for _, child in ipairs(obj:GetChildren()) do
                if child:IsA("StringValue") or child:IsA("TextLabel") then
                    local val = child.Value
                    if val and typeof(val) == "string" then
                        if RARE_PETS[val] then
                            found = val
                            print("‚úÖ Rare pet found: " .. val)
                            break
                        end
                    end
                end
            end
        end
    end

    return found
end

-- === Main loop ===
while true do
    local result = scanWorld()
    if result then
        Label.Text = "‚úÖ Found: " .. result
        break
    else
        Label.Text = "‚ùå No rare pet found. Rescanning..."
        print("Rescanning...")
    end
    task.wait(5)
end
